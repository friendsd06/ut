    -fx-border-color: #ced4da;
}

/* Label styling */
.label {
    -fx-text-fill: #212529;
}

/* Separator styling */
.separator {
    -fx-background-color: #dee2e6;
}

/* SplitPane styling */
.split-pane {
    -fx-background-color: #f4f4f4;
}

.split-pane-divider {
