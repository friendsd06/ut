    <script>
        // Search functionality
        function searchRequests() {
            const cobDate = document.getElementById('cobDate').value;
            const requestId = document.getElementById('requestId').value;
            const status = document.getElementById('statusFilter').value;
            const phase = document.getElementById('phaseFilter').value;
            const adjustment = document.getElementById('adjustmentFilter').value;

            console.log('Searching with filters:', {
                cobDate, requestId, status, phase, adjustment
            });

            alert(`Searching requests for COB Date: ${cobDate}\n\nIn real implementation, this would fetch data from your backend.`);
        }

        // Export functionality
        function exportData() {
            alert('Exporting data to CSV...\n\nIn real implementation, this would download a CSV file with all filtered records.');
        }

        // Make table rows clickable
        document.querySelectorAll('#requestTable tbody tr').forEach(row => {
            row.style.cursor = 'pointer';
            row.addEventListener('click', function() {
                const requestId = this.cells[0].textContent;
                const status = this.cells[1].textContent.trim();
                const phase = this.cells[2].textContent;
                const adjustmentType = this.cells[3].textContent;
                
                alert(`Request Details:\n\nRequest ID: ${requestId}\nStatus: ${status}\nPhase: ${phase}\nAdjustment Type: ${adjustmentType}\n\nIn real implementation, this would open detailed view.`);
            });
        });

        // Set today's date as default COB date
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('cobDate').value = today;
    </script>
